<Page x:Class="SeniorProjectPrototype.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SeniorProjectPrototype"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26*"/>
            <RowDefinition Height="97*"/>
            <RowDefinition Height="97*"/>
            <RowDefinition Height="234*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="88"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Image Margin="0,0,25,0" Source="Images/white.jpg" Stretch="Fill" Grid.ColumnSpan="2" Grid.RowSpan="4"/>
        <GridSplitter Margin="15,0,19,0" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Stretch" Grid.Column="1" Grid.RowSpan="4"/>
        <Button x:Name="button_Add_Client" Click="Button_Add_Client_Click" Grid.Row="2" Margin="10,10,10,0" Height="68" VerticalAlignment="Top" Width="68" ToolTip="Add Customer" Background="{x:Null}" BorderBrush="{x:Null}">
            <StackPanel>
                <Image Source="Images/add_user_group-512.png" Width="40" Height="40"></Image>
            </StackPanel>
        </Button>
        <Button x:Name="button_Add_Employee" Click="Button_Add_Employee_Click" Margin="10,10,10,0" Grid.Row="1" Height="68" VerticalAlignment="Top" Width="68" ToolTip="Add Employee" BorderBrush="{x:Null}" Background="{x:Null}">
            <StackPanel>
                <Image Source="Images/add_user_plus_male-512.png" Width="40" Height="40"></Image>
            </StackPanel>
        </Button>
        <Button x:Name="button_Search" Grid.Row="3" Margin="10,10,10,0" Height="68" VerticalAlignment="Top" Width="68" ToolTip="Search/Edit" Click="Button_Search_Click" Background="{x:Null}" BorderBrush="{x:Null}">
            <StackPanel>
                <Image Source="Images/edit-user-512.png" Width="40" Height="40"/>
            </StackPanel>
        </Button>
        <Menu Height="20" VerticalAlignment="Top" Grid.ColumnSpan="3">
            <MenuItem Header="File" FontSize="14" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <MenuItem Header="Add Client" Click="AddClient_MenuItem_Click" InputGestureText="Clrl + C" Height="22" Width="230"/>
                <MenuItem Header="Add Employees" Click="AddEmployees_MenuItem_Click" InputGestureText="Clrl + E" Height="22" Width="230"/>
                <Separator/>
                <MenuItem Header="Search/Edit" Click="Edit_MenuItem_Click" InputGestureText="Clrl + S" Height="22" Width="230"/>
                <Separator/>
                <MenuItem Header="Logout" Click="Logout_MenuItem_Click" InputGestureText="Clrl + L" Height="22" Width="230"/>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_MenuItem_Click" InputGestureText="Clrl + Q" Height="22" Width="230"/>
            </MenuItem>
            <MenuItem Header="Help" FontSize="14" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch">
                <MenuItem Header="About" Click="About_MenuItem_Click" InputGestureText="Clrl + A" Height="22" Width="200"/>
            </MenuItem>
        </Menu>
    </Grid>
</Page>
